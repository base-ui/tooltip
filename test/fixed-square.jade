extends layout/default

append styles
  :stylus
    body
      height 2000px

    .square
      width 40px
      height 40px
      background-color #000

      &.fixed
        position fixed

      &.one
        top 100px
        left 100px

      &.two
        top 200px
        left 200px

      &.three
        top 300px
        left 300px

      &.four
        top 400px
        left 400px

append scripts
  script
    var Tooltip = require('tooltip');

    (function one() {
      var square = document.querySelector('.square.one.fixed');
      var tooltip = new Tooltip;

      tooltip.appendTo(document.body);
      tooltip.text('Top');
      tooltip.fixed().to(square).top(2);
    })();

    (function two() {
      var square = document.querySelector('.square.two.fixed');
      var tooltip = new Tooltip;

      tooltip.appendTo(document.body);
      tooltip.text('Right');
      tooltip.fixed().to(square).right(4);
    })();

    (function three() {
      var square = document.querySelector('.square.three.fixed');
      var tooltip = new Tooltip;

      tooltip.appendTo(document.body);
      tooltip.text('Bottom');
      tooltip.fixed().to(square).bottom(6);
    })();

    (function four() {
      var square = document.querySelector('.square.four.fixed');
      var tooltip = new Tooltip;

      tooltip.appendTo(document.body);
      tooltip.text('Left');
      tooltip.fixed().to(square).left(8);
    })();

append content
  .square.fixed.one
  .square.fixed.two
  .square.fixed.three
  .square.fixed.four
